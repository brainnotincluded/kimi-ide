{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "out",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/trench/src/commands/archive.ts",
    "src/trench/src/commands/remix.ts",
    "src/trench/src/commands/analyze.ts",
    "src/trench/src/mcpIntegration.ts",
    "src/discovery/example.ts"
  ]
}
