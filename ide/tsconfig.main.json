{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "src/main/main.ts",
    "src/main/toolHandlers.ts"
  ],
  "exclude": [
    "node_modules",
    "src/renderer",
    "src/agents",
    "src/main/automationServer.ts"
  ]
}
