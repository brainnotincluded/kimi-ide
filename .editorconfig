root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.{ts,tsx}]
indent_size = 2
quote_type = single

[*.{js,jsx}]
indent_size = 2
quote_type = single

[*.json]
indent_size = 2
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.sh]
end_of_line = lf
indent_size = 2

[Dockerfile]
indent_size = 4

[*.{css,scss}]
indent_size = 2

[*.html]
indent_size = 2

[*.xml]
indent_size = 2

[Makefile]
indent_style = tab
